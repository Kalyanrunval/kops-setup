apiVersion: apps/v1
kind: Deployment
metadata:
  name: mydp
spec:
  replicas: 1
  selector:
    matchLabels:
      app: nginx
  template:
    metadata:
      labels:
        app: nginx
    spec:
      containers:
        - name: cont1
          image: nginx
          volumeMounts:
            - mountPath: /opt/cont1
              name: devops

        - name: cont2
          image: httpd
          command: ["/bin/bash", "-c", "while true; do echo hello; sleep 10; done"]
          volumeMounts:
            - mountPath: /opt/cont2
              name: devops
